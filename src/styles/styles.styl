@import 'nib'
@import 'jeet'
@import 'rupture'

*
  box-sizing: border-box

a:visited
  color: blue

body
  // font: 14px / 1.7 Menlo, Courier, monospace
  font: 14px / 1.7 Helvetica,Monaco,Lucida Console,Liberation Mono,DejaVu Sans Mono,Bitstream Vera Sans Mono,monospace
  color: #000
  background: #fff
  padding: 3em 4em 5em
  word-wrap: break-word
  +below(600px)
    padding: .4em


header
  overflow: hidden
  margin: 0 auto
  +below(800px)
    border-bottom: 1px solid rgba(0,0,0,.1)
    padding-bottom: 15px
    margin-bottom: 35px
  // text-align: center

  h1
    text-transform: uppercase
    font-size: 24px
    font-family: "Helvetica"
    font-weight: bold
    float: left
    margin: 0
    +below(800px)
      width: 100%
      margin: 10px 0px 5px

  ul
    list-style: none
    overflow: hidden
    padding: 0
    margin: 0
    float: right
    +below(800px)
      float: left

    li
      display: inline-block
      margin-top: 4px
      +below(2)
        line-height: 2

      span
        margin: 0px 6px
        opacity: 0

      a
        padding: 2px 0px
        font-size: 15px
        text-decoration: none
        +below(800px)
          font-size: 13px
          color: #999
          &:visited
            color: #999

        &.here
          pointer-events: none
          color: black

        &:hover
          background-color: #ffaee4

.wrapper
  max-width: 850px
  min-width: 320px
  margin: 6em auto
  +below(1200px)
    margin: 4em auto
  +below(600px)
    margin: 1em auto


.text
  h1
    font-size: 21px
    line-height: 1.4
    font-family: 'Helvetica', 'Ariel', sans-serif
    text-align: center

  h2
    font-size: 14px
    line-height: 1.4
    margin-top: 30px

  h3
    font-size: 12px
    text-transform: uppercase
    color: #999
    margin: 0px

  .divider
    border-bottom: 1px solid #DDD
    padding-bottom: 20px
    margin-bottom: 10px
    &:last-child
      border-bottom: 0px solid transparent

  ul
    margin: 0
    padding: 0
    overflow: hidden
    width: 750px
    margin: 0 auto
    +below(800px)
      width: 100%

    li
      font-size: 15px
      margin: 14px 0px
      display: inline-block
      border-right: 1px solid #eee
      width: 250px
      height: 200px
      padding: 15px
      float: left
      &:nth-child(3)
        border-right: 0px solid transparent
      +below(800px)
        width: 100%
        height: auto
        border-right: 0px solid transparent
        margin: 5px 0px

.right a
  display: block
  margin: 5px 0px

a.button
  padding: 20px
  // border: 1px solid black
  display: inline-block
  font-weight: bold
  cursor: pointer
  background-color: #ffaee4

  &:hover
    opacity: .5

.banner
  width: 100%
  margin-top: 30px
  height: 400px
  overflow: hidden

  +below(600px)
    height: 200px

  img
    width: 100%

a.purple-button
  background-color: #ce83c9
  padding: 15px
  text-align: center
  margin: 0 auto
  text-decoration: none
  color: white
  font-size: 18px
  &:hover
    opacity: .5

.button-line
  width: 100%
  text-align: center
  margin-top: 60px
  padding-bottom: 100px

.emoji-header
  font-size: 24px
  text-align: center

footer
  border-top: 1px solid rgba(0,0,0,.1)
  margin-top: 50px
  height: 50px
